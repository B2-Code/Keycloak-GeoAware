<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd" objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="init-geoip-login-record-table" author="BenLad17">
        <createTable tableName="geoaware_login_record">
            <column name="ID" type="VARCHAR(36)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_geoaware_login_record"/>
            </column>
            <column name="USER_ID" type="VARCHAR(36)">
                <constraints nullable="false"/>
            </column>
            <column name="TIMESTAMP" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="DEVICE_OS" type="VARCHAR(50)"/>
            <column name="DEVICE_OS_VERSION" type="VARCHAR(20)"/>
            <column name="DEVICE_BROWSER" type="VARCHAR(50)"/>
            <column name="DEVICE_TYPE" type="VARCHAR(30)"/>
            <column name="DEVICE_IS_MOBILE" type="BOOLEAN"/>
            <column name="IP_ADDRESS" type="VARCHAR(45)">
                <constraints nullable="false"/>
            </column>
            <column name="CITY" type="VARCHAR(100)"/>
            <column name="POSTAL_CODE" type="VARCHAR(20)"/>
            <column name="COUNTRY" type="VARCHAR(100)"/>
            <column name="COUNTRY_ISO_CODE" type="VARCHAR(2)"/>
            <column name="CONTINENT" type="VARCHAR(20)"/>
            <column name="LATITUDE" type="DOUBLE"/>
            <column name="LONGITUDE" type="DOUBLE"/>
            <column name="ACCURACY_RADIUS" type="INT"/>
        </createTable>
    </changeSet>
    <changeSet id="init-geoip-login-record-table-index-userid" author="BenLad17">
        <createIndex indexName="idx_login_record_userid" tableName="geoaware_login_record">
            <column name="USER_ID"/>
        </createIndex>
    </changeSet>
    <changeSet id="init-geoip-login-record-table-index-ip-time" author="BenLad17">
        <createIndex indexName="idx_login_record_ip_time" tableName="geoaware_login_record">
            <column name="IP_ADDRESS"/>
            <column name="TIMESTAMP"/>
        </createIndex>
    </changeSet>
    <changeSet id="init-geoip-login-record-table-index-time" author="BenLad17">
        <createIndex indexName="idx_login_record_time" tableName="geoaware_login_record">
            <column name="TIMESTAMP"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>